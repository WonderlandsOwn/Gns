@model Models.CharacterCreateModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CharacterCreateModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PlayerId, new { htmlAttributes = new { @class = "form-control" } })

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CharacterName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CharacterName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterRaceId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model != null && Model.AvailableRaces != null)
            {
                @Html.ListBoxFor(model => model.CharacterRaceId, new SelectList(Model.AvailableRaces, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CharacterRaceId, "", new { @class = "text-danger" })
            }
            else
            {
                @Html.ActionLink("Create Race", "Create", "Race", null, null)
            }
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterPrimaryArchtypeId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model != null && Model.AvailableArchtypes != null)
            {
                @Html.ListBoxFor(model => model.CharacterPrimaryArchtypeId, new SelectList(Model.AvailableRaces, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CharacterPrimaryArchtypeId, "", new { @class = "text-danger" })
            }
            else
            {
                @Html.ActionLink("Create Archtype", "Create", "Archtype", null, null)
            }
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterSecondaryArchtypeId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model != null && Model.AvailableArchtypes != null)
            {
                @Html.ListBoxFor(model => model.CharacterSecondaryArchtypeId, new SelectList(Model.AvailableRaces, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CharacterSecondaryArchtypeId, "", new { @class = "text-danger" })
            }
            else
            {
                @Html.ActionLink("Create Archtype", "Create", "Archtype", null, null)
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
