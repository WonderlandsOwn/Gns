@model Models.CharacterCreateModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CharacterCreateModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PlayerId)

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterName, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.CharacterName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CharacterName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterPrimaryArchtypeId, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.CharacterPrimaryArchtypeId, new SelectList(Model.AvailablePrimaryArchtypes, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CharacterPrimaryArchtypeId, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            @Html.ActionLink("Create New", "Create", "Archtype", new { Id = 1 },null)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterSecondaryArchtypeId, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.CharacterSecondaryArchtypeId, new SelectList(Model.AvailableSecondaryArchtypes, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CharacterSecondaryArchtypeId, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            @Html.ActionLink("Create New", "Create", "Archtype", new { Id = 2 },null)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CharacterTertiaryArchtypeId, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.CharacterTertiaryArchtypeId, new SelectList(Model.AvailableTertiaryArchtypes, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CharacterTertiaryArchtypeId, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            @Html.ActionLink("Create New", "Create","Archtype", new { Id = 3 },null)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-8 col-md-4">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { Id = Model.PlayerId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
